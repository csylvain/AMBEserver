#!/bin/sh
# postinst script for dstarrepeater
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

check_uart_speed () {
  # audio dtparam mentioned in config.txt (enabled, disabled or commented out)
  UART_PAT="^[[:space:]]*#?[[:space:]]*(init_uart_clock)[[:space:]]*=[[:space:]]*.*$"

  if [ ! -f /boot/config.txt ]; then
    echo "config.txt not found, not on Raspberry Pi!"
    return 0;
  fi

  if grep -q -E "$UART_PAT" /boot/config.txt; then
    echo "Found existing init_uart_clock entry, not changing."
    return 0;
  fi

  echo "Changing initial uart clock rate in config.txt..."
  echo "\n# Change initial uart clock rate (added by ambeserver)" >> /boot/config.txt
  echo "init_uart_clock=7372800" >> /boot/config.txt
}

check_enable_uart () {
  # audio dtparam mentioned in config.txt (enabled, disabled or commented out)
  UART_PAT="^[[:space:]]*#?[[:space:]]*(enable_uart)[[:space:]]*=[[:space:]]*.*$"

  if [ ! -f /boot/config.txt ]; then
    echo "config.txt not found, not on Raspberry Pi!"
    return 0;
  fi

  if grep -q -E "$UART_PAT" /boot/config.txt; then
    echo "Found existing enable_uart entry, not changing."
    return 0;
  fi

  echo "Changing uart enabled in config.txt..."
  echo "\n# Change uart enabled (added by ambeserver)" >> /boot/config.txt
  echo "enable_uart=1" >> /boot/config.txt
}

case "$1" in
    configure)
    	case "$DPKG_MAINTSCRIPT_ARCH" in
    		armhf | armel) 
    			case `cat /proc/device-tree/compatible 2> /dev/null` in
    				brcm,bcm2710*)
					SERIAL_DEVICE="ttyS0"
					check_enable_uart
					;;
    				brcm,bcm2709* | brcm,bcm2708*)
					SERIAL_DEVICE="ttyAMA0"
					check_uart_speed
					;;
    				*) SERIAL_DEVICE="ttyUSB0";;
    			esac
    		;;
    		amd64 | i386) SERIAL_DEVICE="ttyUSB0";;
    	esac
    	
    	systemctl enable ambeserver@${SERIAL_DEVICE}
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
